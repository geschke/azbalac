{% if  header.header_background_transp and header.header_color_bg %}
<script type="text/javascript">
    var azbalacSettingHeaderColor = { 'bg': '{{ header.header_color_bg }}',
        'transp': '{{ header.header_background_transp_hex }}'
        };

</script>
<style type="text/css">
    #site-header-text a, #site-description {
   
        background: {{ header.header_color_bg}}; /* fallback color */
        background: {{ header.header_color_bg }}{{ header.header_background_transp_hex }};
        
    }
</style>
{% endif %}
{% if header.header_distance_between %}
<style type="text/css">
    #site-header-box-title {
        margin-bottom: {{ header.header_distance_between }}px;
    }
</style>
{% endif %}
{% if header.header_distance_top or header.header_distance_left %}
<style type="text/css">
    #site-header-container-overlay {
        {% if header.header_alignment in [1,4] %}
        left: {{ header.header_distance_left }}px;
        {% elseif header.header_alignment in [2,5] %}
        {# ?? #}
        {% elseif header.header_alignment in [3,6] %}
        right: {{ header.header_distance_left }}px;
        {% endif %}
        {% if header.header_alignment in [1,2,3] %}
        top: {{ header.header_distance_top }}px;
        {# ?? #}
        {% elseif header.header_alignment in [4,5,6] %}
        bottom: {{ header.header_distance_top }}px;
        {% endif %}
    }
</style>
{% endif %}